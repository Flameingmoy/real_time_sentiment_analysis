# Golang Ingestion Service Environment Configuration

# Server Configuration
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30

# Database Configuration (Raw Data)
DB_HOST=localhost
DB_PORT=5435
DB_NAME=rtsa_raw
DB_USER=rtsa_user
DB_PASSWORD=rtsa_password
DB_POOL_SIZE=10

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_SENTIMENT_ANALYSIS=sentiment_analysis_topic
KAFKA_TOPIC_AGGREGATION=aggregation_topic
KAFKA_TOPIC_ALERT=alert_topic

# Rate Limiting
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_INTERVAL=30s